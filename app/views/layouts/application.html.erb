<!DOCTYPE html>
<html>
  <head>
    <title>CRUd1</title>
    <%= favicon_link_tag('favicon.ico') %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <style type="text/css">
        a:link   {color:#084B8A;} 
        a:visited{color:#084B8A;} 
        a:hover  {color:#999999;} 
    </style>
  </head>


  <body>
    
    <% if flash[:notice] %>
        <div class="alert alert-info text-center rounded-0 alert-dismissible fade show">
            <p class="text-dark mb-0"><%= flash[:notice] %></p>
            <button class="close" data-dismiss="alert">&times;</button>
        </div>
    <% end %>
    
    <% if flash[:alert] %>
        <div class="alert alert-danger text-center rounded-0 alert-dismissible fade show">
            <p class="text-dark mb-0"><%= flash[:alert] %></p>
            <button class="close" data-dismiss="alert">&times;</button>
        </div>
    <% end %>

    <div class="container">
      <div class="pt-4">
        <%= yield %>
      </div>
    </div>
    
  </body>
</html>
